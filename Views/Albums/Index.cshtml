@model IEnumerable<PicPerfect.Models.Album>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <section class="jumbotron text-center">
        <div class="container" style="margin-top: 20px;">
            <h1 class="jumbotron-heading">My album</h1>
            <p class="lead text-muted">Manage and view your photo albums</p>

            <p>
                <a asp-action="Create" class="btn btn-primary my-2">Create new album</a>
            </p>
        </div>
    </section>
    <div class="album py-10 bg-light">
        <div class="container">
            <div class="row">
                @foreach (var album in Model)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 box-shadow">
                            <img class="card-img-top" src="@album.CoverImage"
                                style="height: 225px; width: 100%; display: block;" data-holder-rendered="true">
                            <div class="card-body">
                                <h5 class="card-title">@album.AlbumName</h5>
                                <p class="card-text">@album.Description</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group ">

                                        <a asp-action="Details" asp-route-id="@album.AlbumId"
                                            class="btn btn-sm btn-outline-secondary text-white">View</a>
                                        <a asp-action="Edit" asp-route-id="@album.AlbumId"
                                            class="btn btn-sm btn-outline-secondary text-white">Edit</a>
                                        <a asp-action="Delete" asp-route-id="@album.AlbumId"
                                            class="btn btn-sm btn-outline-secondary text-white">Del</a>
                                    </div>

                                    <small class="text-muted ps-1">@album.NumberOfImage images</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
