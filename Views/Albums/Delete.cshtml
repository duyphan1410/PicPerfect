@model PicPerfect.Models.Album

@{
    ViewData["Title"] = "Xóa Album";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Delete album</h1>
    <hr />

    <div class="alert alert-danger">
        <h3>Do you want to delete this album</h3>
        <p>This action cant callback. PLease make sure!</p>
    </div>

    <div class="card">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">Album detail</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.AlbumName)</dd>

                        <dt class="col-sm-4">Desc</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>

                        <dt class="col-sm-4">Date</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CreationDate)</dd>

                        <dt class="col-sm-4">Images</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.NumberOfImage)</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <div class="text-center">
                        <h5>Cover image</h5>
                        <img src="@Model.CoverImage" alt="Cover Image" class="image-preview" style="max-width: 100%;" />
                    </div>
                </div>
            </div>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="AlbumId" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Details" asp-route-id="@Model.AlbumId" class="btn btn-secondary">Go back</a>
            </form>
        </div>
    </div>
</div>
