@{
    ViewData["Title"] = "Quản lý ảnh trong album";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var album = ViewBag.Album as PicPerfect.Models.Album;
}

<div class="container">
    <h2>Quản lý ảnh trong album: @album.AlbumName</h2>

    @if (TempData["SuccessMessage"] != null)
    {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
    }

    <div class="row">
        <div class="col-md-6">
            <h3>Ảnh trong album</h3>
            <div class="row">
                @foreach (var albumImage in album.AlbumImages)
                {
                        <div class="col-md-4 mb-3">
                            <div class="card">
                                <img src="@albumImage.Image.ImagePath" class="card-img-top" alt="@albumImage.Image.ImageName"
                                    style="height: 200px; object-fit: cover;">
                                <div class="card-body">
                                    <form asp-action="RemoveImage" method="post">
                                        <input type="hidden" name="id" value="@album.AlbumId" />
                                        <input type="hidden" name="imageId" value="@albumImage.ImageId" />
                                        <button type="submit" class="btn btn-danger btn-sm">Xóa khỏi album</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                }
            </div>
        </div>

        <div class="col-md-6">
            <h3>Thêm ảnh vào album</h3>
            <form asp-action="AddImage" method="post">
                <input type="hidden" name="id" value="@album.AlbumId" />
                <div class="row">
                    @foreach (var image in ViewBag.UserImages)
                    {
                            <div class="col-md-4 mb-3">
                                <div class="card">
                                    <img src="@image.ImagePath" class="card-img-top" alt="@image.ImageName"
                                        style="height: 200px; object-fit: cover;">
                                    <div class="card-body">
                                        <div class="form-check">
                                            <input type="checkbox" name="selectedImages" value="@image.ImageId"
                                                class="form-check-input" id="image_@image.ImageId">
                                            <label class="form-check-label" for="image_@image.ImageId">Thêm vào album</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                    }
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Thêm ảnh đã chọn</button>
                    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>