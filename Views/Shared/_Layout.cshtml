@using Microsoft.AspNetCore.Identity;
@using Microsoft.AspNetCore.Http;

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PicPerfect</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/PicPerfect.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/style.css" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home">PicPerfect</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-area="" asp-controller="Home">Home</a>
                        </li>
                        @if (ViewBag.FullName != null)
                        {
                            <li class="nav-item">

                                <a href="@Url.Action("Index", "Albums")" class="nav-link">Album</a>
                            </li>
                        }
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                Future
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">Edit Video</a></li>
                                <li><a class="dropdown-item" href="#">Edit Audio</a></li>
                            </ul>
                        </li>
                    </ul>
                    @if (!string.IsNullOrEmpty(ViewContext.HttpContext.Session.GetString("username")))
                    {
                        <button class="btn btn-light me-2" style="">Xin chào @ViewBag.FullName</button>
                        <a href="@Url.Action("Logout", "Home")" class="btn btn-outline-success">Logout</a>
                    }
                    else
                    {
                        <button class="btn btn-outline-success me-2" type="button"
                            onclick="window.location.href='@Url.Action("Login", "Login")'">Login</button>
                        <button class="btn btn-outline-success" type="button"
                            onclick="window.location.href='@Url.Action("SignUp", "SignUp")'">SignUp</button>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/script.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
